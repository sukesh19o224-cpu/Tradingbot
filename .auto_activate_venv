#!/bin/bash
# Auto-activate venv when entering this directory

# Check if we're in the TraDc directory
if [[ "$PWD" == *"TraDc"* ]]; then
    # Check if venv exists and is not already activated
    if [ -d "$PWD/venv" ] && [ -z "$VIRTUAL_ENV" ]; then
        echo "üêç Auto-activating Python virtual environment..."
        source "$PWD/venv/bin/activate"
        echo "‚úÖ Virtual environment activated: $(which python3)"
        echo "üí° Ready to run: ./RUN.sh or ./RUN2.sh"
    fi
fi
